<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:DataBinding.Coleccion.views"
             xmlns:models="clr-namespace:DataBinding.Coleccion.Models"
             x:DataType="views:MainPage"
             x:Class="DataBinding.Coleccion.views.MainPage"
             Title="MainPage"
             BackgroundColor="Black">
    <Grid
        RowDefinitions="Auto,*,Auto"
        Padding="16"
        RowSpacing="8">
        <Grid
            ColumnDefinitions="*,Auto,Auto"
            ColumnSpacing="4">
            <Label
                Text="Origenes del paquete"
                VerticalOptions="Center"/>
            <Button
                Text="+"
                Grid.Column="1"
                TextColor="White"
                BackgroundColor="Gray"
                FontSize="Small"
                FontAttributes="Bold"
                BorderWidth="1"
                Clicked="OnAgregarButtonClicked"/>
            <Button
                Text="X"
                Grid.Column="2"
                TextColor="White"
                BackgroundColor="Gray"
                FontSize="Small"
                FontAttributes="Bold"
                BorderWidth="1"
                Clicked="OnDeleteButtonClicked"/>
        </Grid>

        <CollectionView
            Grid.Row="1"
            BackgroundColor="Black"
            ItemsSource="{Binding Origenes}"
            SelectionMode="Single"
            SelectedItem="{Binding OrigenSeleccionado}"
            EmptyView="Aun no se registran origenes de paquetes"
            SelectionChanged="OrigenesListView_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type models:OrigenDePaquete}">
                    <Border
                        Stroke="White"
                        Padding="8">
                        <Grid
                            RowDefinitions="Auto,*"
                            ColumnDefinitions="Auto,Auto">
                            <CheckBox
                                Grid.RowSpan="2"
                                IsChecked="{Binding EstaHabilitado}"/>
                            <Label
                                Grid.Column="1"
                                Text="{Binding Nombre}"/>
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding Origen}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Grid
            Grid.Row="2"
            RowDefinitions="Auto,Auto,Auto"
            ColumnDefinitions="Auto,*,Auto"
            RowSpacing="8"
            ColumnSpacing="8">
            <Label
                Text="Nombre:"
                VerticalOptions="Center"/>
            <Entry
                Grid.Column="1"
                BackgroundColor="Gray"
                Text="{Binding NombreDelOrigen}"/>
            <Label
                Text="Origen:"
                Grid.Row="1"
                VerticalOptions="Center"/>
            <Entry
                Grid.Column="1"
                Grid.Row="1"
                BackgroundColor="Gray"
                Text="{Binding RutaDelOrigen}"/>
            <Button
                Text="Actualizar"
                Grid.Row="1"
                Grid.Column="2"
                BackgroundColor="Gray"
                TextColor="White"
                Clicked="ActualizarButtonClicked"/>
        </Grid>
    </Grid>
</ContentPage>