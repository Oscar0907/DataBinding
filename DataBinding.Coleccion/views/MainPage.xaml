<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:DataBinding.Coleccion.Models"
             x:Class="DataBinding.Coleccion.views.MainPage"
             Title="MainPage"
             BackgroundColor="Black">
    <Grid
        RowDefinitions="Auto,*,Auto"
        Padding="16">
        <Grid
            ColumnDefinitions="*,Auto,Auto"
            ColumnSpacing="4">
            <Label
                Text="Origenes del paquete"
                VerticalOptions="Center"/>
            <Button
                Text="+"
                Grid.Column="1"
                TextColor="White"
                BackgroundColor="Gray"
                FontSize="Small"
                FontAttributes="Bold"
                BorderWidth="1"
                Clicked="OnAgregarButtonClicked"/>
            <Button
                Text="X"
                Grid.Column="2"
                TextColor="White"
                BackgroundColor="Gray"
                FontSize="Small"
                FontAttributes="Bold"
                BorderWidth="1"
                Clicked="OnDeleteButtonClicked"/>
        </Grid>

        <CollectionView
            Grid.Row="1"
            BackgroundColor="Black"
            SelectionMode="Single"
            EmptyView="Aun no se registran origenes de paquetes"
            SelectionChanged="OrigenesListView_SelectionChanged"
            x:Name="OrigenesListView">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type models:OrigenDePaquete}">
                    <Border
                        Stroke="Blue"
                        Padding="8">
                        <Grid
                            RowDefinitions="Auto,*"
                            ColumnDefinitions="Auto,Auto">
                            <CheckBox
                                Grid.RowSpan="2"
                                IsChecked="False"/>
                            <Label
                                Grid.ColumnSpan="1"
                                Text="Empty"/>
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="Empty 2"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <!--<ListView.ItemsSource>
                <x:Array Type ="{x:Type x:String}">
                    <x:String>Superman</x:String>
                    <x:String>Batman</x:String>
                    <x:String>Deadpool</x:String>
                    <x:String>Spiderman</x:String>
                </x:Array>
            </ListView.ItemsSource>-->
            <!--<ListView.ItemTemplate>
                <DataTemplate>
                    <Label
                        Text=""
                        FontSize="16"/>
                </DataTemplate>
            </ListView.ItemTemplate>-->
        </CollectionView>
        
        <Grid
            Grid.Row="2"
            RowDefinitions="Auto,Auto,Auto"
            ColumnDefinitions="Auto,*,Auto"
            RowSpacing="8"
            ColumnSpacing="8">
            <Label
                Text="Nombre:"
                VerticalOptions="Center"/>
            <Entry
                Grid.Column="1"
                BackgroundColor="Gray"
                x:Name="NombreEntry"/>
            <Label
                Text="Origen:"
                Grid.Row="1"
                VerticalOptions="Center"/>
            <Entry
                Grid.Column="1"
                Grid.Row="1"
                BackgroundColor="Gray"
                x:Name="OrigenEntry"/>
            <Button
                Text="Actualizar"
                Grid.Row="1"
                Grid.Column="2"
                BackgroundColor="Gray"
                TextColor="White"
                Clicked="ActualizarButtonClicked"/>
        </Grid>
    </Grid>
</ContentPage>